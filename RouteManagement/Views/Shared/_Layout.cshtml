<html>
<head>
    @Styles.Render("~/Content/css")
    <link rel="stylesheet" href="~/Content/font-awesome-4.7.0/css/font-awesome.css">
    <link rel="stylesheet" href="~/Content/branding.css" />
    <link rel="stylesheet" href="~/Content/paper-styles.css" />
    <link rel="shortcut icon" type="image/x-icon" href="~/Content/001-road.png" />
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
    @RenderSection("vueHomePage", false)
    @RenderSection("vueClinicPage", false)
    @RenderSection("datetimepickerstyles", false)
</head>
<body>
    <nav class="navbar navbar-default">
        @Html.Partial("_HeaderPartial")
    </nav>
    <div class="container-fluid paper-font-body1">
        <div class="alert alert-success" id="alert-sucess" style="display:none;">
            <strong>Success!</strong> Route successfully saved.
        </div>
        <div class="alert alert-warning" id="alert-warning" style="display:none;">
            <strong>Failure!</strong> No information has been changed.
        </div>
        <div class="alert alert-danger" id="alert-danger" style="display:none;">
            <strong>Failure!</strong> No information was saved.
        </div>
        @RenderBody()
    </div>
    @Scripts.Render("~/bundles/jquery")
    @RenderSection("datetimepickerscripts", false)
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js" integrity="sha384-b/U6ypiBEHpOf/4+1nzFpr53nxSS+GLCkfwBdFNTxtclqqenISfwAzpKaMNFNmj4" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta/js/bootstrap.min.js" integrity="sha384-h0AbiXch4ZDo7tp9hKZ4TsHbi047NrKGLO3SEJAg45jXxnGIfYzk4Si90RDIqNm1" crossorigin="anonymous"></script>
    <script src="http://spin.js.org/spin.min.js"></script>
    <script src="http://malsup.github.io/jquery.blockUI.js"></script>
    <script src="~/Scripts/spinner.js"></script>
</body>
</html>
