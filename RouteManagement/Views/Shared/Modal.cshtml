                                   v-on:input="updateValue($event.target.value)" />
                            <button type="button"
                                    class="modal-default-button"
                                    @@click="showModal = false">
                                OK
                            </button>
                        </slot>
                    </div>
                </div>
            </div>
        </div>
    </div>
</script>
<script>
    Vue.component('cutoff-info', {
        data: function () {
            return {
