@model Wddc.Core.Entities.EdiOrdering.Customers.Customer
<div
   class="list-group-item list-group-item-action">
    <div class="row">

        <div class="col-xs-4">

            <a href="@Url.Action("Add", new { id = Model.Id })">
                <div>@Html.DisplayFor(model => model.Id): @Html.DisplayFor(model => model.Information.CustomerName)</div>
            </a>
        </div>
        <div class="col-xs-2">
            <div>@Html.DisplayFor(model => model.Information.City), @Html.DisplayFor(model => model.Information.State)</div>
        </div>
        <div class="col-xs-3">
            @foreach (var carrier in Model.Carrier)
            {
                <div><strong>@carrier.CARRIER_ID</strong>: @carrier.SHIPVIA</div>
            }
        </div>
        <div class="col-xs-3">
            <div class="text-warning">Requires Routing Setup</div>
        </div>
    </div>
</div>
